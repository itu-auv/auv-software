<launch>
  <arg name="namespace" default="taluy" />

  <include file="$(find auv_detection)/launch/inc/tracker_segment.launch">
    <arg name="namespace" value="$(arg namespace)" />
  </include>
  <include file="$(find auv_detection)/launch/inc/tracker_detection.launch">
    <arg name="namespace" value="$(arg namespace)" />
  </include>

  <group ns="$(arg namespace)">
    <node pkg="auv_vision" type="yolo_to_mask_node.py" name="yolo_seg_to_pipe_mask" output="screen" />
      <remap from="yolo_result_seg" to="/yolo_result_seg"/>
      <remap from="pipe_mask" to="yolo_to_seg_node/pipe_mask" />

    <node pkg="auv_vision" type="pipe_follower.py" name="pipe_follower_node" output="screen" />
      <remap from="cmd_vel" to="cmd_vel" />
      <remap from="debug_image" to="pipe_follower_node/debug_image" />
      <remap from="pipe_mask" to="yolo_to_seg_node/pipe_mask" />
  </group>
</launch>
