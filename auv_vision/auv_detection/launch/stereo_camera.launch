<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <node pkg="stereo_image_proc" type="stereo_image_proc" name="stereo_image_proc" output="screen">
        <remap from="left/image_raw" to="/camera/infra1/image_rect_raw"/>
        <remap from="right/image_raw" to="/camera/infra2/image_rect_raw"/>
        <remap from="left/camera_info" to="/camera/infra1/camera_info"/>
        <remap from="right/camera_info" to="/camera/infra2/camera_info"/>
        <param name="approximate_sync" value="true"/>
        <param name="queue_size" value="10"/>
    </node>
</launch>
