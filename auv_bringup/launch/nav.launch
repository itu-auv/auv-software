<launch>
	<!-- Arguments -->
	<arg name="namespace" default="taluy" />
	<arg name="control_rate" default="20.0" />
	<!-- move_base -->
	<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
		<param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
		<rosparam file="$(find auv_bringup)/config/move_base/costmap_common_params.yaml" command="load" ns="global_costmap" subst_value="true" />
		<rosparam file="$(find auv_bringup)/config/move_base/costmap_common_params.yaml" command="load" ns="local_costmap" subst_value="true" />
		<rosparam file="$(find auv_bringup)/config/move_base/local_costmap_params.yaml" command="load" subst_value="true" />
		<rosparam file="$(find auv_bringup)/config/move_base/global_costmap_params.yaml" command="load" subst_value="true" />
		<rosparam file="$(find auv_bringup)/config/move_base/move_base_params.yaml" command="load" subst_value="true" />
		<rosparam file="$(find auv_bringup)/config/move_base/dwa_local_planner_params.yaml" command="load" subst_value="true" />
		<remap from="cmd_vel" to="/$(arg namespace)/cmd_vel" />
		<remap from="odom" to="/$(arg namespace)/odometry" />
	</node>
</launch>
