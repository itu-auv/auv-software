# ARG BASE_IMAGE=nvcr.io/nvidia/l4t-ml:r35.2.1-py3
ARG BASE_IMAGE=dustynv/ros:noetic-ros-base-l4t-r35.2.1

FROM ${BASE_IMAGE}

WORKDIR /auv_ws

# GPG KEY FIX â€“ ROS repository key expired, update it before apt-get update
RUN apt-key del F42ED6FBAB17C654 || true && \
    curl -sSL https://raw.githubusercontent.com/ros/rosdistro/master/ros.key | apt-key add -

RUN apt-get update && \
  apt-get install -y \
  git \
  python3-vcstool \
  python3-catkin-tools && \
  # Install preliminary dependencies
  apt-get install -y \
  ros-noetic-ros-control \
  ros-noetic-ros-controllers \
  ros-noetic-robot-state-publisher \
  ros-noetic-joint-state-publisher \
  ros-noetic-xacro \
  ros-noetic-robot-localization && \
  rm -rf /var/lib/apt/lists/*
