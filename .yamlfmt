# yamlfmt configuration file
# Docs: https://github.com/google/yamlfmt/blob/main/docs/config-file.md

formatter:
  type: basic
  indent: 2
  include_document_start: false
  retain_line_breaks: true
  max_line_length: 150
  trim_trailing_whitespace: true
  eof_newline: true

# Exclude files that have specific formatting requirements
exclude:
  - auv_bringup/config/ekf.yaml
