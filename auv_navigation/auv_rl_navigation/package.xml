<?xml version="1.0"?>
<package format="2">
  <name>auv_rl_navigation</name>
  <version>0.1.0</version>
  <description>RL-based navigation system for AUV</description>

  <maintainer email="your@email.com">AUV Team</maintainer>
  <license>MIT</license>

  <buildtool_depend>catkin</buildtool_depend>

  <depend>auv_msgs</depend>
  <depend>geometry_msgs</depend>
  <depend>nav_msgs</depend>
  <depend>rospy</depend>
  <depend>sensor_msgs</depend>
  <depend>std_msgs</depend>
  <depend>tf2_geometry_msgs</depend>
  <depend>tf2_ros</depend>
  <depend>visualization_msgs</depend>

  <exec_depend>python3-numpy</exec_depend>
  <exec_depend>python3-pip</exec_depend>
  <exec_depend>python3-scipy</exec_depend>
  <exec_depend>python3-torch</exec_depend>

  <!-- Note: gym and stable-baselines3 need to be installed via pip -->
  <!-- pip3 install gym stable-baselines3 tensorboard -->
</package>
