<launch>

  <!-- OctoMap Server Node -->
  <node pkg="octomap_server" type="octomap_server_node" name="octomap_server">

    <!-- Resolution of the map (in meters) -->
    <param name="resolution" value="0.05" />

    <!-- Frame id for the map -->
    <param name="frame_id" type="string" value="odom" />
    <param name="project_map" value="true" />
    <!-- Whether to use a 2D map -->
    <param name="publish_2d_map" value="true" />
    <!-- Maximum range for sensor data insertion (in meters) -->

    <!-- Input point cloud topic -->
    <remap from="cloud_in" to="/taluy/camera/depth/points" />

  </node>

</launch>
